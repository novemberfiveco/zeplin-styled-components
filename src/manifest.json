{
  "packageName": "zeplin-styled-components",
  "name": "Styled Components",
  "description": "A Zeplin extension that generates Styled Component snippets from colors, text styles and layers.",
  "version": "1.1.2",
  "moduleURL": "./index.js",
  "readmeURL": "./README.md",
  "author": {
    "name": "Nick Verstocken",
    "email": "nick.verstocken@novemberfive.co",
    "url": "https://novemberfive.co"
  },
  "repository": "https://github.com/novemberfiveco/zeplin-styled-components.git",
  "options": [
    {
      "name": "Theme namespace for colors in styled components",
      "type": "text",
      "id": "colorThemeNameSpace",
      "default": "theme.palette"
    },
    {
      "name": "Theme namespace for text styles in styled components",
      "type": "text",
      "id": "textStyleThemeNameSpace",
      "default": "theme.textStyles"
    },
    {
      "name": "Exclude specific css properties (comma seperated)",
      "type": "text",
      "id": "excludeProperties",
      "default": "font-face"
    },
    {
      "name": "Color format",
      "type": "picker",
      "id": "colorFormat",
      "options": [
        {
          "name": "Default",
          "value": "default"
        },
        {
          "name": "HEX",
          "value": "hex"
        },
        {
          "name": "RGB",
          "value": "rgb"
        },
        {
          "name": "HSL",
          "value": "hsl"
        }
      ],
      "default": "default"
    },
    {
      "name": "Root font size in px (only for 'rem' units)",
      "type": "text",
      "id": "baseFontSize",
      "default": "16"
    },
    {
      "name": "Font size format",
      "type": "picker",
      "id": "fontSizeUnit",
      "options": [
        {
          "name": "px",
          "value": "px"
        },
        {
          "name": "rem",
          "value": "rem"
        }
      ],
      "default": "px"
    },
    {
      "name": "Unitless line-height",
      "type": "switch",
      "id": "unitlessLineHeight",
      "default": true
    },
    {
      "name": "Include default browser values",
      "type": "switch",
      "id": "showDefaultValues",
      "default": false
    }
  ],
  "projectTypes": ["web"]
}
